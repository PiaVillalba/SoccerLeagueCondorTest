<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimaryDark"
    >

    <ImageView
        android:id="@+id/mainActivity_leagueImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxHeight="160dp"
        android:background="@drawable/shape_bottom_shadow"
        android:elevation="8dp"
        tools:targetApi="lollipop"
        android:scaleType="fitXY"></ImageView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:animateLayoutChanges="true"
        android:elevation="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:targetApi="lollipop">

        <ImageView
            android:id="@+id/mainActivity_filterIcon"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@drawable/shape_circle_primary"
            android:contentDescription="@string/app_name"
            android:elevation="8dp"
            android:padding="6dp"
            app:srcCompat="@drawable/ic_filter_list"
            tools:targetApi="lollipop" />

    </LinearLayout>

    <TextView
        android:id="@+id/mainActivity_leagueName"
        fontPath="fonts/OpenSans-Regular.ttf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:elevation="8dp"
        android:hint="La liga"
        android:textColor="@color/white"
        android:textSize="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingPrefix"
        tools:targetApi="lollipop"
        tools:visibility="visible" />

</android.support.constraint.ConstraintLayout>